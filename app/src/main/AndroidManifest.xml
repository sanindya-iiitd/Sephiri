<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.andy.sephiri" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewUserSetPatternActivity"
            android:label="@string/title_activity_set_pattern" >
        </activity>
        <activity
            android:name=".RegisteredUserConfirmPatternActivity"
            android:label="@string/title_activity_confirm_pattern" >
        </activity>
        <activity
            android:name=".FilePickerActivity"
            android:label="@string/title_activity_file_picker" >
        </activity>
    </application>

</manifest>
